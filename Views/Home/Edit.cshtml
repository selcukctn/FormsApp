@model Product
@{
    ViewData["Title"] = "Edit Product";
}
<div asp-validation-summary="All"></div>
<form asp-controller="Home" aps-action="Edit" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="ProductId" value="@Model.ProductId"/>
    <div class="mb-3">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control">
    </div>
    <div class="mb-3">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control">
    </div>
    <div class="input-group mb-3">
        <img src="~/images/@Model.Image" style="width: 100px;height:100px;">
        <input type="hidden" asp-for="Image" value="@Model.Image"/>
        <input type="file" name="imageFile" id="imageFile" class="form-control">
    </div>
    <div class="mb-3">
        <label asp-for="CategoryId" ></label>
        <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-select">
            <option value="">Se√ßiniz</option>
        </select>
    </div>
    <div class="mb-3">
        <input class="form-check-label" asp-for="IsActive">
        <label asp-for="IsActive" class="form-check-label"></label>
    </div>
    <button type="submit" class="btn btn-primary">
        Save
    </button>
</form>
